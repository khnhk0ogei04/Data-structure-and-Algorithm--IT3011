#include<bits/stdc++.h>
#include<string.h>
#include<math.h>
    int main(){
        long long n;
        std::cin>>n;
        int temp = n % 10;
        if ( temp == 0 || temp == 5 ) {
            std::cout<<n/5;
        }
        if ( temp == 2 || temp == 3 || temp == 7 || temp == 8){
            std::cout<<n/5+1;
        }
        if ( temp == 4 || temp == 9 ){
            std::cout<<n/5 + 2;
        }
        if ( temp == 6 || temp == 1 ){
            std::cout<<n/5 + 1;
        }
        return 0;
        
    }

    
    
    
