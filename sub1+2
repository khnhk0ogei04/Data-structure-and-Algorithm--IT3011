#include<bits/stdc++.h>
const int MAXN = 2005;
using namespace std;
    int m,n,d,k;
    int D[200005],P[200005];
    char A[MAXN][MAXN];
    char B[2][400005];
    void inp1(){
        for ( int i = 1 ; i <= m ; i++ ){
            for ( int j = 1 ; j <= n ; j++ ){
                std::cin>>B[i][j];
            }
        }
    }
    void sub2(){
        inp1();
        memset(D,0,sizeof(D));
        memset(P,0,sizeof(P));
        for ( int i = 1 ; i <= n ; i++ ){
            if ( B[1][i] == 'M' ) {
            if ( i > d )    D[i-d]++;
            else D[1]++;
                             D[i+d+1]--;
            }
        }
        P[1] = D[1];
        for ( int i = 2 ; i <= n ; i ++ ){
            P[i] = P[i-1] + D[i];
    //        std::cout<<P[i]<<" ";
        }
        int cnt = 0;
        for ( int i = 1 ; i <= n ; i++ ){
            if ( B[1][i] == 'P' && P[i] >= k) cnt++;
        }
        std::cout<<cnt<<std::endl;
    }
    int main(){
  //     freopen("KHUDANCU.INP","r",stdin);
    //     freopen("KHUDANCU.OUT","w",stdout);
        std::cin>>m>>n>>d>>k;
        if ( m == 1 ) sub2();
        return 0;
    }
